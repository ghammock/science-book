# EditorConfig file
# See: https://editorconfig.org/

root = true

[*]
# Typical, POSIX-compliant UTF-8 files (e.g. *.py, *.cpp, etc.)
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.json, *.yaml, *.yml, .yamllint}]
indent_size = 2
tab_width = 2

[Makefile]
# Makefiles __require__ tabs.
indent_style = tab
